<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityPersonal"
    android:orientation="vertical"
    android:background="@drawable/loginimg">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PERSONAL SERVICES"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:background="@drawable/rectangle">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PERSON :1"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textSize="20dp"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NAME : "
                            android:textStyle="bold"
                            android:textColor="#fff"
                            android:textSize="15dp"/>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Enter full name"
                            android:textColorHint="#fff"
                            android:inputType="text"
                            android:id="@+id/name"
                            android:textSize="15dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CONTACT :"
                            android:textStyle="bold"
                            android:textColor="#fff"
                            android:textSize="15dp"/>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Enter contact here"
                            android:textColorHint="#fff"
                            android:inputType="phone"
                            android:id="@+id/contact"
                            android:textSize="15dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ADDRESS : "
                            android:textStyle="bold"
                            android:textColor="#fff"
                            android:textSize="15dp"/>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/address"
                            android:hint="Enter full address"
                            android:textColorHint="#fff"
                            android:textSize="15dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:textColor="#fff"
                        android:layout_marginBottom="10dp"
                        android:layout_height="fill_parent">

                        <CheckBox android:id="@+id/checkbox_audioP1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"

                            android:text="Share Audio Clips"
                            android:onClick="onCheckboxClicked"/>

                        <CheckBox android:id="@+id/checkbox_photoP1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"

                            android:text="Share Photographs"
                            android:onClick="onCheckboxClicked"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:background="@drawable/rectangle">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PERSON :2"
                            android:textColor="#fff"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textSize="20dp"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NAME : "
                            android:textStyle="bold"
                            android:textColor="#fff"
                            android:textSize="15dp"/>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Enter full name"
                            android:textColorHint="#fff"
                            android:inputType="text"
                            android:id="@+id/name2"
                            android:textSize="15dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CONTACT :"
                            android:textStyle="bold"
                            android:textColor="#fff"
                            android:textSize="15dp"/>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Enter contact here"
                            android:textColorHint="#fff"
                            android:inputType="phone"
                            android:id="@+id/contact2"
                            android:textSize="15dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ADDRESS : "
                            android:textStyle="bold"
                            android:textColor="#fff"
                            android:textSize="15dp"/>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/address2"
                            android:hint="Enter full address"
                            android:textColorHint="#fff"
                            android:textSize="15dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:textColor="#fff"
                        android:layout_marginBottom="10dp"
                        android:layout_height="fill_parent">

                        <CheckBox android:id="@+id/checkbox_audioP2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"

                            android:text="Share Audio Clips"
                            android:onClick="onCheckboxClicked"/>

                        <CheckBox android:id="@+id/checkbox_photoP2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"

                            android:text="Share Photographs"
                            android:onClick="onCheckboxClicked"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:background="@drawable/rectangle">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PERSON :3"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textSize="20dp"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NAME : "
                            android:textStyle="bold"
                            android:textColor="#fff"
                            android:textSize="15dp"/>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Enter full name"
                            android:textColorHint="#fff"
                            android:inputType="text"
                            android:id="@+id/name3"
                            android:textSize="15dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CONTACT :"
                            android:textStyle="bold"
                            android:textColor="#fff"
                            android:textSize="15dp"/>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Enter contact here"
                            android:textColorHint="#fff"
                            android:inputType="phone"
                            android:id="@+id/contact3"
                            android:textSize="15dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ADDRESS : "
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:textSize="15dp"/>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/address3"
                            android:hint="Enter full address"
                            android:textColorHint="#fff"
                            android:textSize="15dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:textColor="#fff"
                        android:layout_marginBottom="10dp"
                        android:layout_height="fill_parent">

                        <CheckBox android:id="@+id/checkbox_audioP3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"

                            android:text="Share Audio Clips"
                            android:onClick="onCheckboxClicked"/>

                        <CheckBox android:id="@+id/checkbox_photoP3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"

                            android:text="Share Photographs"
                            android:onClick="onCheckboxClicked"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUBMIT"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rectangle"
                android:clickable="true"
                android:id="@+id/button"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>